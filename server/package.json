{
  "name": "server",
  "version": "1.0.0",
  "license": "MIT",
  "files": [
    "/dist"
  ],
  "devDependencies": {
    "@types/cls-hooked": "^4.3.0",
    "@types/convict": "^4.2.1",
    "@types/dockerode": "^2.5.20",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/request": "^2.48.2",
    "@types/request-promise-native": "^1.0.16",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.5",
    "@types/winston": "^2.4.4",
    "dockerode": "^2.5.8",
    "eslint": "^6.2.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "portfinder": "^1.0.23",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "package": "./package.sh",
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint",
    "serve": "CONFIG_PATH=config node dist/src/index.js",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "build-ts": "tsc -b",
    "lint": "tslint --project . --fix",
    "copy-config": "mkdir -p dist/config/ && cp config/* dist/config/",
    "debug": "npm run build && npm run watch-debug",
    "watch-test": "npm run test -- --watchAll",
    "lint-watch": "nodemon --exec 'npm run lint'",
    "watch-ts": "tsc -b -w",
    "serve-debug": "CONFIG_PATH=config nodemon --inspect dist/src/index.js"
  },
  "dependencies": {
    "@overnightjs/core": "^1.6.9",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "cls-hooked": "^4.2.2",
    "convict": "^5.1.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-list-endpoints": "^4.0.1",
    "http-status-codes": "latest",
    "inversify": "^5.0.1",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  }
}
