{
  "name": "server",
  "version": "1.0.0",
  "license": "MIT",
  "devDependencies": {
    "@types/cls-hooked": "^4.3.0",
    "@types/convict": "^4.2.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/request": "^2.48.2",
    "@types/request-promise-native": "^1.0.16",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.5",
    "@types/winston": "^2.4.4",
    "eslint": "^6.2.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "package": "npm run build && ./package.sh",
    "start": "npm run serve",
    "build": "npm run build-ts",
    "serve": "node build/src/index.js",
    "watch-node": "nodemon build/src/index.js",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "copy-config": "mkdir -p build/config/ && cp config/* build/config/",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "CONFIG_PATH=config nodemon --inspect build/src/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "@overnightjs/core": "^1.6.9",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.3",
    "cls-hooked": "^4.2.2",
    "convict": "^5.1.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-list-endpoints": "^4.0.1",
    "http-status-codes": "latest",
    "inversify": "^5.0.1",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  }
}
